<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -UST COMELEC</title>
    @Scripts.Render("~/Scripts/jquery-1.9.0.min.js")
    @Scripts.Render("~/Scripts/uikit.min.js")
    @Scripts.Render("~/Scripts/components/notify.min.js")
    @Scripts.Render("~/Scripts/components/sticky.min.js")
    <script src="~/Scripts/components/tooltip.min.js"></script>

    @Styles.Render("~/Content/uikit.almost-flat.min.css")
    @Styles.Render("~/Content/components/notify.gradient.min.css")
    @Styles.Render("~/Content/components/sticky.gradient.min.css")
    <link href="~/Content/components/tooltip.gradient.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="uk-navbar uk-sticky-placeholder" data-uk-sticky="{top:0, media: 0}">
        <div class="uk-sticky-init uk-active">
            <a href="" class="uk-navbar-brand uk-hidden-small">UST COMELEC</a>
            <ul class="uk-navbar-nav uk-margin-left uk-hidden-small">
                <li class="uk-parent" data-uk-dropdown>
                    <a>Navbar</a>
                    <div class="uk-dropdown uk-dropdown-navbar">
                        <ul class="uk-nav uk-nav-navbar">
                            <li><a>Sample 1</a></li>
                            <li><a>Sample 2</a></li>
                            <li class="uk-nav-divider"></li>
                        </ul>
                    </div>
                </li>
            </ul>
            <a href="#offcanvas-menu" class="uk-navbar-toggle uk-icon-large uk-margin-small uk-visible-small" data-uk-offcanvas></a>
            <a href="" class="uk-navbar-brand uk-margin-left uk-visible-small">UST COMELEC</a>
            <div class="uk-navbar-content uk-align-right">
                <ul class="uk-navbar-nav uk-hidden-small">
                    <li class="uk-parent" data-uk-dropdown>
                        @if (Request.IsAuthenticated && !(User.IsInRole("activation")))
                        {
                            <a class="">@Html.Encode(User.Identity.Name) <i><img src="@Url.Content("~/Image/default/placeholder_avatar.png")" class="uk-border-circle" /></i></a>
                            <div class="uk-dropdown uk-dropdown-navbar">
                                <ul class="uk-nav uk-nav-navbar">
                                    <li>@Html.ActionLink("Profile", "UserProfile", "User")</li>
                                    <li><a>Settings</a></li>
                                    <li class="uk-nav-divider"></li>
                                    <li>@Html.ActionLink("Log out", "Logout", "Auth")</li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            @Html.ActionLink("Log in", "Login", "Auth")
                        }
                    </li>
                </ul>
                @if (Request.IsAuthenticated)
            {
                    <a href="#offcanvas-user" class="uk-icon-user uk-icon-large uk-visible-small uk-margin-small uk-margin-right" data-uk-offcanvas></a>
                }
                else
                {
                    @Html.ActionLink("Log in", "Login", "Auth", new { @class = "uk-visible-small" })
                }
            </div>
        </div>
    </nav>
    @RenderBody()
    <div id="offcanvas-menu" class="uk-offcanvas">
        <div class="uk-offcanvas-bar">
            <ul class="uk-nav uk-nav-offcanvas">
                <li><a>Sample 1</a></li>
                <li><a>Sample 2</a></li>
                <li class="uk-nav-divider"></li>
            </ul>
        </div>
    </div>
    <div id="offcanvas-user" class="uk-offcanvas">
        <div class="uk-offcanvas-bar">
            <ul class="uk-nav uk-nav-offcanvas">
                <li>@Html.ActionLink("Profile", "UserProfile", "User")</li>
                <li><a>Settings</a></li>
                <li class="uk-nav-divider"></li>
                <li>@Html.ActionLink("Log out", "Logout", "Auth")</li>
            </ul>
        </div>
    </div>
</body>
</html>