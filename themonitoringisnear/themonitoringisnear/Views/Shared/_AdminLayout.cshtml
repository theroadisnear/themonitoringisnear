
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="uk-container uk-container-center uk-margin-top">
    <div class="uk-grid uk-grid-collapse uk-grid-divider">
        <div class="uk-width-medium-2-10 uk-hidden-small">
            <div class="uk-sticky-placeholder">
                <div class="uk-panel uk-sticky-init uk-margin-top" data-uk-sticky="{top:57, media: 0}">
                    <h3 class="uk-panel-title">Navigation Panel</h3>
                    <ul class="uk-nav uk-nav-side">
                        <li>@Html.ActionLink("Dashboard", "Index", "Admin")</li>
                        <li>@Html.ActionLink("Manage Elections", "ElectionsIndex", "Admin")</li>
                        <li>@Html.ActionLink("Manage Users", "GroupsIndex", "Admin")</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="uk-width-medium-2-10 uk-visible-small">
            <div class="uk-sticky-placeholder">
                <div class="uk-panel uk-sticky-init" data-uk-sticky="{top:57, media: 0}">
                    <ul class="uk-subnav uk-align-right">
                        <li data-uk-dropdown="{delay:'500'}">
                            <button class="uk-button uk-button-primary">
                                Navigation Panel 
                                <span class="uk-icon-caret-down">
                                </span>
                            </button>
                            <div class="uk-dropdown uk-dropdown-small">
                                <ul class="uk-nav uk-nav-dropdown">
                                    <li>@Html.ActionLink("Dashboard", "Index", "Admin")</li>
                                    <li>@Html.ActionLink("Manage Users", "GroupsIndex", "Admin")</li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="uk-width-medium-8-10 uk-width-small-1-1">
            @RenderBody()
        </div>
    </div>
</div>